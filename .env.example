# 应用配置
APP_NAME=股票预测平台
APP_VERSION=1.0.0
APP_ENV=production

# 后端配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DATABASE_URL=sqlite:///app/data/stock_prediction.db

# 数据服务配置
DATA_SERVICE_URL=http://192.168.3.62:8080
DATA_SERVICE_TIMEOUT=30
DATA_CACHE_TTL=3600

# 前端配置
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
FRONTEND_PORT=3000

# 安全配置
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log

# 监控配置
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin123

# 性能配置
WORKERS=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=5

# 缓存配置
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# 机器学习配置
MODEL_PATH=/app/data/models
QLIB_DATA_PATH=/app/data/qlib
BATCH_SIZE=32
MAX_EPOCHS=100

# 数据库配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30