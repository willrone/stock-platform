# 应用配置
APP_NAME="Stock Prediction Platform"
APP_VERSION="0.1.0"
DEBUG=true
LOG_LEVEL="INFO"

# 服务器配置
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# 数据库配置
DATABASE_URL="sqlite:///./data/app.db"

# 远端数据服务配置
# NOTE: 本地优先（localhost/127.0.0.1），不通再回退到该URL
REMOTE_DATA_SERVICE_URL="http://192.168.3.62:5002"
REMOTE_DATA_SERVICE_TIMEOUT=30

# 数据同步（SFTP）配置（分布式部署时使用）
# 默认关闭，避免误用/安全风险
SFTP_SYNC_ENABLED=false
SFTP_HOST="192.168.3.62"
SFTP_PORT=22
SFTP_USERNAME=""
SFTP_PASSWORD=""
SFTP_REMOTE_LIST_PATH="/path/to/data/parquet/stock_list.parquet"
SFTP_REMOTE_DATA_DIR="/path/to/data/parquet/stock_data"

# 数据存储配置
# Use project-root ../data so backend shares the same dataset with back_test_data_service
DATA_ROOT_PATH="../data"
PARQUET_DATA_PATH="../data/stocks"
MODEL_STORAGE_PATH="../data/models"

# Qlib 配置
QLIB_DATA_PATH="../data/qlib_data"
QLIB_CACHE_PATH="../data/qlib_cache"

# 任务配置
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT_SECONDS=3600
CLEANUP_INTERVAL_HOURS=24

# API 配置
API_V1_PREFIX="/api/v1"
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090